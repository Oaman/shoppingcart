<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#ffffff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/shoppingcart_bottom_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="全选"
            android:checked="false"
            app:buttonTint="#50c3d8"
            android:button="@drawable/btn_check_box"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shoppingcart_bottom_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#50c3d8"
            android:textSize="15sp"
            tools:text="合计: 1.88元"/>

        <TextView
            android:id="@+id/shoppingcart_bottom_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#797979"
            android:textSize="15sp"
            tools:text="已优惠: 20.88元"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/shoppingcart_bottom_confirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#50c3d8">

        <TextView
            android:id="@+id/shoppingcart_bottom_btn_pov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="去结算"/>

        <TextView
            android:id="@+id/shoppingcart_bottom_selected_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="1.5dp"
            android:layout_toRightOf="@id/shoppingcart_bottom_btn_pov"
            android:layout_alignBottom="@id/shoppingcart_bottom_btn_pov"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="(2)"/>

    </RelativeLayout>
</LinearLayout>

</LinearLayout>